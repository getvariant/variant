# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# If a path ends in a slash, redirect to the same path without the trailing /.
GET     /*path/                     com.variant.server.play.controller.RootController.untrail(path)

# Connection Controller
POST    /connection/:schema      com.variant.server.play.controller.ConnectionController.open(schema: String)
DELETE  /connection              com.variant.server.play.controller.ConnectionController.close()

# Event Controller
POST    /event                   com.variant.server.play.controller.EventController.post()

# Session Controller
GET     /session/:sid            com.variant.server.play.controller.SessionController.getSession(sid)
PUT     /session                 com.variant.server.play.controller.SessionController.saveSession()

PUT     /session/attr            com.variant.server.play.controller.SessionController.addAttribute()
DELETE  /session/attr            com.variant.server.play.controller.SessionController.clearAttribute()

# Request Controller
POST    /request                 com.variant.server.play.controller.RequestController.create()
PUT     /request                 com.variant.server.play.controller.RequestController.commit()

# Health page at root
GET     /                        com.variant.server.play.controller.RootController.status()
